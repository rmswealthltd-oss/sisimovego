generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ======================================================================
// USERS
// ======================================================================

model User {
  id           String   @id @default(uuid())
  name         String
  email        String?  @unique
  phone        String?  @unique
  passwordHash String
  role         UserRole @default(PASSENGER)
  suspended    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  driver        Driver?
  bookings      Booking[]
  payments      Payment[]
  notifications Notification[]
  refunds       Refund[]
  fraudEvents   FraudEvent[]
}

enum UserRole {
  PASSENGER
  DRIVER
  ADMIN
}

// ======================================================================
// DRIVER + VEHICLE
// ======================================================================

model Driver {
  id       String  @id @default(uuid())
  userId   String  @unique
  user     User    @relation(fields: [userId], references: [id])
  verified Boolean @default(false)
  rating   Float?  @default(5.0)

  vehicle     Vehicle?
  trips       Trip[]
  payouts     Payout[]
  LedgerEntry LedgerEntry[]
}

model Vehicle {
  id       String @id @default(uuid())
  driverId String @unique
  driver   Driver @relation(fields: [driverId], references: [id])

  make  String
  model String
  plate String  @unique
  color String?
}

// ======================================================================
// TRIPS
// ======================================================================

model Trip {
  id       String @id @default(uuid())
  driverId String
  driver   Driver @relation(fields: [driverId], references: [id])

  origin      String
  destination String
  originLat   Float
  originLng   Float
  destLat     Float
  destLng     Float

  priceCents     Int
  availableSeats Int
  status         TripStatus @default(PENDING)
  departureAt    DateTime
  createdAt      DateTime   @default(now())

  bookings Booking[]
}

enum TripStatus {
  PENDING
  DRIVER_ASSIGNED
  ONGOING
  COMPLETED
  CANCELLED
}

// ======================================================================
// BOOKINGS + PAYMENTS
// ======================================================================

model Booking {
  id         String        @id @default(uuid())
  tripId     String
  userId     String
  seats      Int
  totalCents Int
  status     BookingStatus @default(PENDING)
  createdAt  DateTime      @default(now())

  trip    Trip     @relation(fields: [tripId], references: [id])
  user    User     @relation(fields: [userId], references: [id])
  payment Payment?
  refund  Refund?
}

enum BookingStatus {
  PENDING
  PAID
  CANCELLED
  REFUNDED
}

model Payment {
  id          String          @id @default(uuid())
  bookingId   String          @unique
  userId      String
  provider    PaymentProvider
  reference   String
  phone       String?
  amountCents Int
  status      PaymentStatus   @default(PENDING)
  createdAt   DateTime        @default(now())

  booking Booking @relation(fields: [bookingId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}

enum PaymentProvider {
  MPESA
  STRIPE
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  CANCELLED
}

// ======================================================================
// REFUNDS
// ======================================================================

model Refund {
  id        String       @id @default(uuid())
  bookingId String       @unique
  userId    String
  status    RefundStatus @default(PENDING)
  reason    String?
  ruleHits  Json?
  createdAt DateTime     @default(now())

  booking Booking @relation(fields: [bookingId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}

enum RefundStatus {
  PENDING
  APPROVED
  REJECTED
  PAID
}

// ======================================================================
// FRAUD ENGINE
// ======================================================================

model FraudRule {
  id     String  @id @default(uuid())
  name   String
  script String
  active Boolean @default(true)

  events FraudEvent[]
}

model FraudEvent {
  id        String   @id @default(uuid())
  userId    String
  ruleId    String?
  score     Int
  metadata  Json?
  createdAt DateTime @default(now())

  user User       @relation(fields: [userId], references: [id])
  rule FraudRule? @relation(fields: [ruleId], references: [id])
}

// ======================================================================
// PAYOUTS + LEDGER
// ======================================================================

model Payout {
  id       String  @id @default(uuid())
  driverId String
  batchId  String?
  amount   Int
  status   String // PENDING | APPROVED | REJECTED | FAILED | PAID

  approvedAt DateTime? @db.Timestamptz
  rejectedAt DateTime? @db.Timestamptz

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  driver        Driver        @relation(fields: [driverId], references: [id])
  batch         PayoutBatch?  @relation(fields: [batchId], references: [id])
  ledgerEntries LedgerEntry[]
}

model PayoutBatch {
  id         String   @id @default(uuid())
  totalCents Int
  createdAt  DateTime @default(now())

  payouts Payout[]
}

model LedgerEntry {
  id        String     @id @default(uuid())
  payoutId  String?
  driverId  String
  amount    Int
  type      LedgerType
  reference String?
  note      String?

  createdAt DateTime @default(now())
  driver    Driver   @relation(fields: [driverId], references: [id])
  payout    Payout?  @relation(fields: [payoutId], references: [id])
}

enum LedgerType {
  PAYOUT
  TRIP_EARNING
  PROMO
  REFUND_DEBIT
  ADJUSTMENT
}

// ======================================================================
// PAYMENT CALLBACKS
// ======================================================================

model PaymentCallback {
  id           String   @id @default(cuid())
  provider     String
  providerTxId String   @unique
  rawPayload   Json
  status       String   @default("RECEIVED")
  createdAt    DateTime @default(now())
}

// ======================================================================
// NOTIFICATIONS
// ======================================================================

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  body      String
  data      Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

// ======================================================================
// PROMO CODES
// ======================================================================

model PromoCode {
  id          String   @id @default(cuid())
  code        String   @unique
  discountPct Int
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ======================================================================
// CRON + SETTINGS
// ======================================================================

model CronState {
  id      String   @id
  lastRun DateTime @default(now())
}

model SystemSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

// ======================================================================
// DEAD LETTER QUEUE
// ======================================================================

model DeadLetter {
  id        String   @id @default(uuid())
  source    String
  payload   Json
  error     String
  createdAt DateTime @default(now())
}

// ======================================================================
// OUTBOX
// ======================================================================

model OutboxEvent {
  id String @id @default(uuid())

  type    String
  channel String?

  aggregateType String?
  aggregateId   String?

  status    String  @default("READY")
  processed Boolean @default(false)
  attempts  Int     @default(0)
  lastError String?

  payload Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([processed])
  @@index([aggregateId])
  @@index([type])
}
